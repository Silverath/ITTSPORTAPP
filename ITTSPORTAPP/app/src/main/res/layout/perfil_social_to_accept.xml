<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@color/gray">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:id="@+id/iv_perfil_imagen"
        android:src="@mipmap/ic_launcher_round"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ll_perfil_nombre"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/iv_perfil_imagen"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="15dp"
        android:layout_marginStart="36dp"
        android:layout_marginEnd="36dp"
        >

        <TextView
            android:id="@+id/label_nombre_perfil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre: "
            />

        <TextView
            android:id="@+id/tv_nombre_perfil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Random name"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ll_perfil_primer_apellido"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/ll_perfil_nombre"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="5dp"
        android:layout_marginStart="36dp"
        android:layout_marginEnd="36dp"
        >

        <TextView
            android:id="@+id/label_primer_apellido_perfil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Primer apellido: "
            />

        <TextView
            android:id="@+id/tv_primer_apellido_perfil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Montanius"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ll_perfil_segundo_apellido"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/ll_perfil_primer_apellido"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="5dp"
        android:layout_marginStart="36dp"
        android:layout_marginEnd="36dp"
        >

        <TextView
            android:id="@+id/label_segundo_apellido_perfil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Segundo apellido: "
            />

        <TextView
            android:id="@+id/tv_segundo_apellido_perfil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Zambrano xd"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/ll_perfil_segundo_apellido"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="270dp"
        android:paddingBottom="10dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_accept"
            android:src="@drawable/accept"
            android:clickable="true"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_reject"
            android:layout_marginStart="10dp"
            android:src="@drawable/reject"
            android:clickable="true"/>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>