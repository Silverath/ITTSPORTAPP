<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_asunto_mensaje"
        style="@style/TextAppearance.AppCompat.Title"
        android:layout_gravity="center_vertical|start"
        android:fontFamily="monospace"
        android:textColor="#000"
        android:textSize="22sp"
        android:padding="16dp"
        android:text="What time is it?"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_sender_id_mensaje"
        android:layout_gravity="center_vertical|start"
        android:fontFamily="monospace"
        android:textColor="#000"
        android:textSize="15sp"
        android:paddingLeft="16dp"
        android:text="Summer time!"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_cuerpo_mensaje"
        android:layout_gravity="center_vertical|start"
        android:fontFamily="monospace"
        android:textColor="#000"
        android:textSize="15sp"
        android:paddingLeft="16dp"
        android:text="Is dis rial laif"
        android:visibility="gone"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_receiver_id_mensaje"
        android:layout_gravity="center_vertical|start"
        android:fontFamily="monospace"
        android:textColor="#000"
        android:textSize="15sp"
        android:paddingLeft="16dp"
        android:text="Is dis yast fantasi"
        android:visibility="gone"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_fecha_mensaje"
        android:layout_gravity="center_vertical|start"
        android:fontFamily="monospace"
        android:textColor="#000"
        android:textSize="15sp"
        android:paddingLeft="16dp"
        android:text="Cojt in a lendslaid"
        android:visibility="gone"/>
    
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#dadada"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"/>

</LinearLayout>