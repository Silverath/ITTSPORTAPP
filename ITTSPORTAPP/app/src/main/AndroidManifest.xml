<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ittsport.ittsportapp">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activities.AppRejectPerfilSocialActivity"></activity>
        <activity android:name=".activities.AppRejectEscuelaActivity" />
        <activity
            android:name=".activities.NewEscuelaActivity"
            android:label="@string/title_activity_new_escuela"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".activities.ChatMessagingActivity" />
        <activity
            android:name=".activities.LoginActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.HomeAlumnoActivity" />
        <activity android:name=".activities.ChooseEscuelaActivity"></activity>
        <activity
            android:name=".activities.InscripcionAlumnoActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".activities.ListEscuelaActivity" />
        <activity
            android:name=".activities.ListGrupoActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".activities.MessageActivityShow" />
        <activity android:name=".activities.ListSocialProfileActivity" />
        <activity
            android:name=".activities.EditPerfilSocialActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activities.HomeDirectorActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activities.MainActivity"
            android:windowSoftInputMode="stateAlwaysHidden" />
        <activity
            android:name=".activities.RegisterActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="stateAlwaysHidden" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>